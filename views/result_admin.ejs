<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Election Results Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .candidate {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: #f2f2f2;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .candidate-name {
            font-weight: bold;
        }

        .votes {
            font-size: 18px;
            color: #007bff;
        }

        .dashboard-header {
            background-color: #007bff;
            color: #fff;
            padding: 15px;
            border-radius: 8px 8px 0 0;
        }

        .dashboard-header h1 {
            margin: 0;
        }
    </style>
</head>

<body>
    <a href="/logout">Logout</a>
    <div class="container">
        <div class="dashboard-header">
            <h1>Representative IV B</h1>
        </div>
        <div id="results">
            <% rep4b.forEach(repcd=> { %>
                <div class="candidate">
                    <span class="candidate-name">
                        <%= repcd.name %>
                    </span>
                    <span class="votes">
                        <%= repcd.votes %> votes
                    </span>
                </div>
                <% }); %>
        </div>
    </div>

    <div class="container">
        <div class="dashboard-header">
            <h1>Sc</h1>
        </div>
        <div id="results">
            <% scs.forEach(sc=> { %>
                <div class="candidate">
                    <span class="candidate-name">
                        <%= sc.name %>
                    </span>
                   
                    <span class="votes">
                        <%= sc.votes %> votes
                    </span>
                </div>
                <% }); %>
        </div>
    </div>

    <div class="container">
        <div class="dashboard-header">
            <h1>Chairman</h1>
        </div>
        <div id="results">
            <% chms.forEach(chm=> { %>
                <div class="candidate">
                    <span class="candidate-name">
                        <%= chm.name %>
                    </span>
                   
                    <span class="votes">
                        <%= chm.votes %> votes
                    </span>
                </div>
                <% }); %>
        </div>
    </div>

</body>

</html>





